@model CoreDbSpCallMVC.Models.DB.SpVendors
@{
    ViewData["Title"] = "Delete";
}


    <section>
        <div>
            <h3>Are you sure you want to delete this vendor???</h3>
        </div>

        <div class="row">
            <table class="table table-sm table-striped table-bordered m-2 col-sm-7">
                <thead><tr><th>Vendor ID</th><th>Name</th></tr></thead>
                <tbody>
                    <tr>
                        <td>@Model.VendorId</td>
                        <td>@Model.Name</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="VendorId" name="id" />
            <button type="submit" class="btn btn-danger">YES</button>
            <a asp-action="Index" class="btn btn-primary">NO</a>
        </form>
    </section>
